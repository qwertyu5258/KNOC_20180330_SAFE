@charset "euc-kr" ;
@import url(base.css);
@import url(sub.css);

body {}

/* layout */
#wrap {min-width:320px ; background:url(/mobile/images/common/top_line.gif) repeat-x top ;}
#header {height:44px ; padding-top:2px ;}
#header * img {vertical-align:top ;}
.header_area {width:320px ;}
.header_area li {float:left ; padding-left:5px ; width:48% ; background:url(/mobile/images/common/top_bar.gif) no-repeat right ;}
.header_area li.bar {}
.header_area li.top_txt {background:url(/mobile/images/common/top_txt.gif) no-repeat ; float:right ; width:141px ; height:44px ; padding-right:5px ;}

#notice_area {clear:both ; height:27px ; background:url(/mobile/images/common/top_bg.gif) repeat-x top ;}
#notice_area .notice_txt {width:320px ; margin:0 auto ;}
.notice_txt {}
.notice_txt dl {float:left ; margin-top:6px ; width:320px ;}
.notice_txt dt {float:left ; color:#fff ; padding-left:10px ; text-transform:uppercase ;}
.notice_txt dd {float:left ; width:230px ; background:url(/mobile/images/common/icon_arrow.gif) no-repeat left 4px ; padding-left:10px ; margin-left:10px ;}
.notice_txt dd a {color:#f9f9f9 ;}
.notice_txt dd a:hover {color:#fff ;}
.notice_txt dd span.notice_date {float:right ; color:#f9f9f9 ;}
.arr{background:url(/mobile/images/common/icon_arrow.gif) no-repeat left 4px ; padding-left:10px ;}

#contents {clear:both ; background:url(/mobile/images/common/cont_bg.gif) repeat-x ;}
#contents * img {vertical-align:top ;}
.menu {padding-top:11px ;}
.menu li {float:left ; padding-left:22px ; padding-bottom:20px ;}
.banner {clear:both ; margin:0 auto ; width:297px ;}
.banner img { -ms-interpolation-mode:bicubic;}




#footer {clear:both ; height:48px ; background:url(/mobile/images/common/footer_bg.gif) repeat-x ; margin-bottom:10px ; margin-top:1px ;}
#footer ul {margin-left:10px ; padding-top:10px ;}
#footer li 
	{
		float:left ; width:33% ; background:url(/mobile/images/common/footer_bar.gif) no-repeat right 4px ;
		text-align:center ; padding-bottom:3px ; text-transform:uppercase ;
	}
#footer li a:hover {color:#666 ; text-decoration:none ;}

.footer_01 a {position:relative ; display:block ; width:100% ; height:20px ;}
.footer_02 a {position:relative ; display:block ; width:100% ; height:20px ;}
.footer_03 a {position:relative ; display:block ; width:100% ; height:20px ;}
#footer p.copyright {clear:both ; text-align:center ; text-transform:uppercase ;}

.test_box {width:320px ; height:30px ; background-color:#000 ; margin:0 auto ;}

.sns {width:100% ; height:23px ; float:left ;}
.sns ul {float:left ; width:100% ;}
.sns ul li {width:50% ; float:left ; text-align:center ;}
.sns ul li.twitter {background:url(/mobile/images/common/twitter_bg.gif) repeat-x ;}
.sns ul li.facebook {background:url(/mobile/images/common/facebook_bg.gif) repeat-x ;}
.sns ul li.redwhistle {background-color:#fff;}
